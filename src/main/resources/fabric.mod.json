{
  "schemaVersion": 1,
  "id": "mccourse",
  "version": "${version}",

  "name": "MCCourse Fabric Mod",
  "description": "Learning how to Mod Minecraft mods",
  "authors": [
    "Alice Giandjian"
  ],
  "contact": {
    "homepage": "https://fabricmc.net/",
    "sources": "https://github.com/FabricMC/fabric-example-mod"
  },

  "license": "MIT",
  "icon": "assets/modid/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "net.alice.mccourse.MCCourseMod"
    ]
  },
  "mixins": [
    "mccourse.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.9",
    "fabric-api": "*",
    "minecraft": "~1.19",
    "java": ">=17"
  },
  "suggests": {
    "another-mod": "*"
  }
}
